<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:noHistory="true"
    android:background="@drawable/menubackground"
    tools:context="se.killergameab.phonster.InstructionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/headerInstructionsText"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="44sp"
        android:layout_marginTop="20dp"
        android:textColor="#c2579532"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsText1"
        android:text="Tilt your phone to aim"
        android:layout_marginTop="62dp"
        android:textSize="20sp"
        android:textColor="#d2e7e7e7"
        android:layout_below="@+id/headerInstructionsText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsText2"
        android:text="Fast aiming --> Damage bonus"
        android:layout_marginTop="62dp"
        android:textSize="20sp"
        android:textColor="#d2e7e7e7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsText3"
        android:text="Swing your phone to attack"
        android:layout_marginTop="62dp"
        android:textSize="20sp"
        android:textColor="#d200"
        android:layout_below="@+id/instructionsText2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
