<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_aiming"
    tools:context=".AimingActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monster HP: "
        android:id="@+id/monsterHP"
        android:layout_marginTop="40dp"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/monsterHP2"
        android:layout_marginTop="40dp"
        android:layout_gravity="top"
        android:layout_marginLeft="124dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monster XP: "
        android:id="@+id/monsterXP"
        android:layout_marginTop="65dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10"
        android:id="@+id/monsterXP2"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="124dp"/>

    <ImageView
        android:id="@+id/monsterPic"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/angry_monster"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player HP: "
        android:id="@+id/playerHP"
        android:layout_marginBottom="55dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/playerHP2"
        android:layout_marginBottom="55dp"
        android:layout_gravity="right|bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player XP: "
        android:id="@+id/playerXP"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="35dp"
        android:layout_gravity="right|bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/playerXP2"
        android:layout_marginBottom="30dp"
        android:layout_gravity="right|bottom"/>


    <!-- Invisible view used in the onClickListener -->
    <View
        android:id="@+id/touchListener"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="5"
        android:progress="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_header_relativelayout"
        />

</FrameLayout>