<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.killergameab.phonster.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onPlayClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructionsButton"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:onClick="onInstructionsClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscores"
        android:id="@+id/highscoresButton"
        android:layout_below="@+id/instructionsButton"
        android:layout_centerHorizontal="true"
        android:onClick="onHighscoresClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aiming"
        android:id="@+id/aimingButton"
        android:layout_below="@+id/highscoresButton"
        android:layout_centerHorizontal="true"
        android:onClick="onAimingClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:id="@+id/attackButton"
        android:layout_below="@+id/aimingButton"
        android:layout_centerHorizontal="true"
        android:onClick="onAttackClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle"
        android:id="@+id/battleButton"
        android:layout_below="@+id/attackButton"
        android:layout_centerHorizontal="true"
        android:onClick="onBattleClick"/>
</RelativeLayout>
